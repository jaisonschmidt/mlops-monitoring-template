{
  "dashboard": {
    "title": "ML Model Metrics",
    "tags": ["ml", "model", "metrics"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "F2-Score",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "model_f2_score",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 1,
            "decimals": 3,
            "unit": "percentunit",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.6, "color": "yellow"},
                {"value": 0.7, "color": "orange"},
                {"value": 0.8, "color": "green"},
                {"value": 0.9, "color": "dark-green"}
              ]
            }
          }
        },
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        }
      },
      {
        "id": 2,
        "title": "AUC-ROC",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "model_auc_score",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 1,
            "decimals": 3,
            "unit": "percentunit",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.7, "color": "yellow"},
                {"value": 0.8, "color": "green"},
                {"value": 0.9, "color": "dark-green"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Precisão",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "model_precision",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "decimals": 3,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.7, "color": "yellow"},
                {"value": 0.8, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Recall",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "model_recall",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "decimals": 3,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.7, "color": "yellow"},
                {"value": 0.8, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Tempo de Treinamento",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "model_training_duration_seconds / 60",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "m",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 5, "color": "yellow"},
                {"value": 10, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Amostras de Treino",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 4},
        "targets": [
          {
            "expr": "model_training_samples",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "blue"}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Evolução das Métricas do Modelo",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "model_f2_score",
            "legendFormat": "F2-Score",
            "refId": "A"
          },
          {
            "expr": "model_auc_score",
            "legendFormat": "AUC",
            "refId": "B"
          },
          {
            "expr": "model_precision",
            "legendFormat": "Precisão",
            "refId": "C"
          },
          {
            "expr": "model_recall",
            "legendFormat": "Recall",
            "refId": "D"
          }
        ],
        "yaxes": [
          {"format": "percentunit", "label": "Score", "min": 0, "max": 1},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "Predições Totais",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "sum(model_predictions_total)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "blue"}
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "title": "Taxa de Predições/min",
        "type": "graph",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 8},
        "targets": [
          {
            "expr": "rate(model_predictions_total[1m]) * 60",
            "legendFormat": "Predições/min",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Predições/min"},
          {"format": "short"}
        ]
      },
      {
        "id": 10,
        "title": "Histórico de Métricas",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "model_f2_score",
            "format": "table",
            "instant": true,
            "refId": "A"
          },
          {
            "expr": "model_auc_score",
            "format": "table",
            "instant": true,
            "refId": "B"
          },
          {
            "expr": "model_precision",
            "format": "table",
            "instant": true,
            "refId": "C"
          },
          {
            "expr": "model_recall",
            "format": "table",
            "instant": true,
            "refId": "D"
          },
          {
            "expr": "model_training_duration_seconds",
            "format": "table",
            "instant": true,
            "refId": "E"
          }
        ],
        "transformations": [
          {
            "id": "merge",
            "options": {}
          }
        ]
      }
    ]
  }
}
